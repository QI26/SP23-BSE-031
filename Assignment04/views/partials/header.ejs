<link rel="stylesheet" href="/css/homePageBootStrap.css">
<link rel="stylesheet" href="/css/header.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap">

<header>
    <!-- Marquee Section -->
    <div class="marquee">
        <p class="mb-0 text-center text-white p-2">Enjoy free delivery nationwide for orders above PKR 3000. The standard delivery charges are PKR 150 on below 3,000 shopping. Online orders will be delivered in 3 to 5 working days.</p>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand" href="/">
                <img src="/images/logo.png" alt="Logo" style="max-height: 50px;">
            </a>

            <!-- Toggler Button for Mobile View -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="products" id="preWinterSaleDropdown" role="button"
                            aria-expanded="false">
                            Products
                        </a>
                    </li>
        
                    <!-- Admin Panel -->
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/products">Admin Panel</a>
                    </li>
                </ul>

                <!-- User Section: Cart and Login/Logout -->
                <div class="d-flex align-items-center">
                    <!-- Cart Icon -->
                    <a href="/cart" class="nav-icons position-relative" style="text-decoration: none; color: inherit;">
                        <i class="bi bi-cart" style="font-size: 1.5rem;"></i>
                    </a>

                    <!-- User Login/Logout Section -->
                    <% if (user) { %>
                        <span class="nav-link">Welcome <%= user.name %>,</span>
                        <a href="/logout" class="nav-link">Logout</a>
                    <% } else { %>
                        <a href="/login" class="btn btn-primary mx-2">Login</a> 
                        <a href="/register" class="btn btn-success mx-2">Register</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
</header>


