<header>
    <!-- Marquee Section -->
    <div class="marquee">
        <p class="mb-0 text-center text-white p-2">Enjoy free delivery nationwide for orders above PKR 3000. The standard delivery charges are PKR 150 on below 3,000 shopping. Online orders will be delivered in 3 to 5 working days.</p>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand" href="/">
                <img src="/images/logo.png" alt="Logo" style="max-height: 50px;">
            </a>

            <!-- Toggler Button for Mobile View -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="products" id="preWinterSaleDropdown" role="button"
                            aria-expanded="false">
                            Products
                        </a>
                    </li>
        
                    <!-- Admin Panel -->
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/products">Admin Panel</a>
                    </li>
                </ul>

                <!-- User Section: Cart and Login/Logout -->
                <div class="d-flex align-items-center">
                    <!-- Cart Icon -->
                    <a href="/cart" class="nav-icons position-relative" style="text-decoration: none; color: inherit;">
                        <i class="bi bi-cart" style="font-size: 1.5rem;">
                            <span class="badge rounded-circle bg-danger" style="position: absolute; top: -5px; right: -5px;">0</span>
                        </i>
                    </a>

                    <!-- User Login/Logout Section -->
                    <% if (user) { %>
                        <span class="nav-link">Welcome <%= user.name %>,</span>
                        <a href="/logout" class="nav-link">Logout</a>
                    <% } else { %>
                        <a href="/login" class="nav-link">Login</a> |
                        <a href="/register" class="nav-link">Register</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
</header>

<!-- Custom CSS for Navbar Styling -->
<style>
    .navbar {
        background-color: #ffffff;
        border-bottom: 1px solid #e0e0e0;
    }

    .navbar .nav-link {
        font-size: 1.1rem;
        padding: 12px 25px;
        transition: all 0.3s ease;
    }

    .navbar .nav-link:hover {
        background-color: #f8f9fa;
        border-radius: 5px;
    }

    .navbar .navbar-brand img {
        max-height: 60px;
        transition: transform 0.3s ease;
    }

    .navbar .navbar-brand img:hover {
        transform: scale(1.1);
    }

    .navbar .dropdown-menu {
        background-color: #f9f9f9;
        border-radius: 5px;
    }

    .navbar .dropdown-item {
        padding: 10px 20px;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .navbar .dropdown-item:hover {
        background-color: #e9ecef;
    }

    .marquee {
        background-color: #f8c8c8;
        font-size: 16px;
        padding: 8px;
        text-align: center;
    }

    .nav-icons i {
        font-size: 1.8rem;
    }

    .nav-icons span.badge {
        background-color: #dc3545;
        color: white;
        font-size: 0.8rem;
        padding: 3px 6px;
        position: absolute;
        top: -5px;
        right: -5px;
    }
</style>
