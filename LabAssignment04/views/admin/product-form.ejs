<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f7fc;
        color: #444;
        margin: 0;
        padding: 0;
    }
    h4{
        color: #ffffff;
    }

    .admin-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 25px 30px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
    }

    .admin-container:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .form-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
        color: #4e73df;
        letter-spacing: 1px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 8px;
        color: #2d3748;
        font-size: 1rem;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        font-size: 1rem;
        color: #333;
        background-color: #f8f9fa;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: #4e73df;
        box-shadow: 0 0 8px rgba(78, 115, 223, 0.5);
        background-color: #ffffff;
    }

    .form-text {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .btn-primary {
        display: block;
        width: 100%;
        padding: 12px;
        font-size: 1rem;
        font-weight: bold;
        background-color: #4e73df;
        color: #fff;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #2d3e9c;
        transform: translateY(-2px);
    }

    .btn-primary:active {
        background-color: #1d2a6b;
        transform: translateY(0);
    }
</style>



<h4>Create Product</h4>

<form action="" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="nameInput">Product Name</label>
        <input name="name" type="text" class="form-control" id="nameInput" placeholder="Enter Product Name" required />
        <small class="form-text text-muted">Product Name</small>
    </div>
    
    <div class="form-group">
        <label for="modelInput">Product Model</label>
        <input name="model" type="text" class="form-control" id="modelInput" placeholder="Enter Product Model" required />
        <small class="form-text text-muted">Product Model (e.g., BM6780-BLUE)</small>
    </div>
    
    <div class="form-group">
        <label for="priceInput">Price (PKR)</label>
        <input name="price" type="number" class="form-control" id="priceInput" placeholder="Enter Price" required />
        <small class="form-text text-muted">Product Price</small>
    </div>

    <div class="form-group">
        <label for="originalPriceInput">Original Price (PKR)</label>
        <input name="originalPrice" type="number" class="form-control" id="originalPriceInput" placeholder="Enter Original Price" />
        <small class="form-text text-muted">Product Original Price</small>
    </div>

    <div class="form-group">
        <label for="colorInput">Product Color</label>
        <input name="color" type="text" class="form-control" id="colorInput" placeholder="Enter Product Color" required />
        <small class="form-text text-muted">Product Color</small>
    </div>

    <div class="form-group">
        <label for="sizeInput">Product Sizes</label>
        <input name="size" type="text" class="form-control" id="sizeInput" placeholder="Enter Sizes (comma-separated)" required />
        <small class="form-text text-muted">Enter sizes in comma-separated format (e.g., 32, 34, 36)</small>
    </div>

    <div class="form-group">
        <label for="barcodeInput">Product Barcode</label>
        <input name="barcode" type="text" class="form-control" id="barcodeInput" placeholder="Enter Product Barcode" />
        <small class="form-text text-muted">Product Barcode (Optional)</small>
    </div>

    <div class="form-group">
        <label for="availabilityInput">Availability</label>
        <select name="availability" class="form-control" id="availabilityInput">
            <option value="In stock" selected>In stock</option>
            <option value="Out of stock">Out of stock</option>
            <option value="Pre-order">Pre-order</option>
        </select>
        <small class="form-text text-muted">Product Availability</small>
    </div>

    <div class="form-group">
        <label for="descriptionInput">Description</label>
        <textarea name="description" class="form-control" id="descriptionInput" placeholder="Enter Product Description"></textarea>
        <small class="form-text text-muted">Product Details</small>
    </div>

    <div class="form-group">
        <label for="imageUploadInput">Product Images</label>
        <input name="image" type="file" class="form-control" id="imageUploadInput"  />
    </div>
    

    <div class="form-group">
        <button type="submit" class="btn btn-info">Create New Product</button>
    </div>
</form>
