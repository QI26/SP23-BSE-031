<h4>Add Category</h4>

<form action="/admin/categories/create" method="post">
    <div class="form-group">
        <label for="idInput">ID</label>
        <input name="id" type="text" class="form-control" id="idInput" aria-describedby="idHelp" placeholder="Enter ID" />
        <small id="idHelp" class="form-text text-muted">Category ID</small>
    </div>
    <div class="form-group">
        <label for="titleInput">Title</label>
        <input name="title" type="text" class="form-control" id="titleInput" placeholder="Enter Title" />
        <small id="titleHelp" class="form-text text-muted">Category Title</small>
    </div>
    <div class="form-group">
        <label for="descriptionInput">Description</label>
        <textarea name="description" class="form-control" id="descriptionInput" placeholder="Enter Description"></textarea>
        <small id="descriptionHelp" class="form-text text-muted">Category Description</small>
    </div>
    <div class="form-group">
        <button type="submit" class="btn-primary">Add New Category</button>
    </div>
</form>

