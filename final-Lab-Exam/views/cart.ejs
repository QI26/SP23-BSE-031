<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Borjon - Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <h1 class="mt-5">Your Cart</h1>

        <% if (message) { %>
            <div class="alert alert-warning mt-3">
                <%= message %>
            </div>
            <% } else { %>
                <% if (products.length> 0) { %>
                    <ul class="list-group mt-3">
                        <% products.forEach(product=> { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h5>
                                        <%= product.name %>
                                    </h5>
                                    <p>Price: <%= product.price %> PKR</p>
                                </div>


                                <form action="/cart/remove/<%= product._id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Remove
                                    </button>
                                </form>
                            </li>
                            <% }); %>
                    </ul>

                    <div class="mt-4">
                        <h3>Total:
                            <%= products.reduce((total, product)=> total + product.price , 0) %> PKR
                        </h3>
                    </div>

                    <div class="mt-3">
                        <a href="/checkout" class="btn btn-primary">Proceed to Checkout</a>
                    </div>

                    <% } else { %>
                        <p class="mt-3">Your cart is currently empty.</p>
                        <% } %>
                            <% } %>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>